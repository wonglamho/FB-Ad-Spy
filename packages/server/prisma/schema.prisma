generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  monitors    Monitor[]
  collections Collection[]
  savedAds    SavedAd[]
  searchHistory SearchHistory[]

  @@map("users")
}

model Monitor {
  id            String    @id @default(cuid())
  userId        String
  pageId        String
  pageName      String
  isActive      Boolean   @default(true)
  lastCheckedAt DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, pageId])
  @@map("monitors")
}

model Collection {
  id          String   @id @default(cuid())
  userId      String
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  savedAds SavedAd[]

  @@map("collections")
}

model SavedAd {
  id           String   @id @default(cuid())
  userId       String
  collectionId String?
  adArchiveId  String
  adData       Json
  notes        String?
  tags         String[]
  createdAt    DateTime @default(now())

  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  collection Collection? @relation(fields: [collectionId], references: [id], onDelete: SetNull)

  @@unique([userId, adArchiveId])
  @@map("saved_ads")
}

model SearchHistory {
  id          String   @id @default(cuid())
  userId      String
  searchTerms String?
  pageIds     String[]
  countries   String[]
  filters     Json?
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("search_history")
}

model CachedAd {
  id              String   @id @default(cuid())
  adArchiveId     String   @unique
  pageId          String
  adData          Json
  fetchedAt       DateTime @default(now())
  expiresAt       DateTime

  @@index([pageId])
  @@index([expiresAt])
  @@map("cached_ads")
}
